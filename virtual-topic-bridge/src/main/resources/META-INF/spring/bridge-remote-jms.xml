<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:amq="http://activemq.apache.org/schema/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


 <bean id="5xConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
      <property name="brokerURL" value="tcp://10.0.2.6:61616"/>
      <property name="userName" value="admin"/>
      <property name="password" value="admin"/>
   </bean>

   <bean id="jmsConfig" class="org.apache.camel.component.jms.JmsConfiguration">
      <property name="connectionFactory" ref="5xConnectionFactory"/>
      <property name="concurrentConsumers" value="10"/>
   </bean>

   <bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent">
      <property name="configuration" ref="jmsConfig"/>
   </bean>


 <bean id="7xConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
      <property name="brokerURL" value="tcp://10.0.2.7:61716"/>
      <property name="userName" value="admin"/>
      <property name="password" value="admin"/>
   </bean>

   <bean id="jmsConfig2" class="org.apache.camel.component.jms.JmsConfiguration">
      <property name="connectionFactory" ref="7xConnectionFactory"/>
      <property name="concurrentConsumers" value="10"/>
   </bean>

   <bean id="artemis" class="org.apache.activemq.camel.component.ActiveMQComponent">
      <property name="configuration" ref="jmsConfig2"/>
   </bean>


   <camelContext id="bridgeContext" trace="false" xmlns="http://camel.apache.org/schema/spring">
      <route id="bridge_TEST.FOO">
      	 <from uri="activemq:queue:Consumer.bridge.VirtualTopic.TopicA"/>
      	 <to uri="artemis:topic:VirtualTopic.TopicA"/>         
      </route>
   </camelContext>
</beans>
